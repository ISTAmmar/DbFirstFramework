@model Sigma.ViewModels.RoleViewModel

@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <p class="row pull-right">
        @Html.ActionLink("Create New", "Create", null, new {@class= "btn btn-success uppercase" })
    </p>
    <table class="table">
        <tr>
            <th>
                RoleName
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Roles)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Create", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>