@model Sigma.ViewModels.DashboardViewModel

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .merge {
        text-align: center !important;
    }
</style>

@section scripts{
    <script src="~/Js/Dashboard/dashboardService.js"></script>
    <script src="~/Js/Dashboard/dashboardController.js"></script>
    <script src="~/Scripts/pages/ecommerce-index.js"></script>
    <script src="~/Scripts/datepicker/bootstrap-datepicker.js"></script>
}

<div class="page-content">
    <div id="dashboard" ng-controller="dashboardController">
        <h3>Distributor List</h3>
        <div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th></th>
                        <th>Distributor Code</th>
                        <th>Distributor Name</th>
                    </tr>
                </thead>
                <tbody ng-repeat="dis in distributors">
                    <tr>
                        <td><a href="#" ng-click="showDistributor(dis)">Click me</a></td>
                        <td>{{ dis.DistributorCode }}</td>
                        <td>{{ dis.DistributorName }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>

<script>
    jQuery(document).ready(function () {
        EcommerceIndex.init();
        $('.date-picker').datepicker({
            rtl: Metronic.isRTL(),
            orientation: "right",
            autoclose: true
        });
    });
</script>