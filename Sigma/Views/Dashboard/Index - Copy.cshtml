@model Sigma.ViewModels.DashboardViewModel

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .merge {
        text-align: center !important;
    }
</style>

<div class="page-content">
    <h3 class="page-title">
        Dashboard <small>dashboard & statistics</small>
    </h3>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="#">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="javascript:;">Dashboard</a>
            </li>
        </ul>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12 margin-bottom-10">
            <div class="dashboard-stat blue-madison">
                <div class="visual">
                    <i class="fa fa-briefcase fa-icon-medium"></i>
                </div>
                <div class="details">
                    <div class="number">
                        $168,492.54
                    </div>
                    <div class="desc">
                        Lifetime Sales
                    </div>
                </div>
                <a class="more" href="javascript:;">
                    View more <i class="m-icon-swapright m-icon-white"></i>
                </a>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="dashboard-stat red-intense">
                <div class="visual">
                    <i class="fa fa-shopping-cart"></i>
                </div>
                <div class="details">
                    <div class="number">
                        1,127,390
                    </div>
                    <div class="desc">
                        Total Orders
                    </div>
                </div>
                <a class="more" href="javascript:;">
                    View more <i class="m-icon-swapright m-icon-white"></i>
                </a>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="dashboard-stat green-haze">
                <div class="visual">
                    <i class="fa fa-group fa-icon-medium"></i>
                </div>
                <div class="details">
                    <div class="number">
                        $670.54
                    </div>
                    <div class="desc">
                        Average Orders
                    </div>
                </div>
                <a class="more" href="javascript:;">
                    View more <i class="m-icon-swapright m-icon-white"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="portlet box blue-steel">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-thumb-tack"></i>Credit Movement Report
                    </div>
                    <div class="tools">
                        <div class="form-group">
                            <div class="col-md-3">
                                <div class="input-group input-medium date date-picker" data-date="12-02-2012" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
                                    <input type="text" class="form-control" readonly="">
                                    <span class="input-group-btn">
                                        <button class="btn default" type="button"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                            </div>
                        </div>
                        @*<a href="javascript:;" class="collapse"></a>
                            <a href="javascript:;" class="reload"></a>
                            <a href="javascript:;" class="remove"></a>*@
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="tab-content">
                        <div class="tab-pane active" id="overview_1">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover table-bordered">
                                    <thead>
                                        <tr>
                                            <th rowspan="2">Distribution</th>
                                            <th rowspan="2">Credit Limit</th>
                                            <th rowspan="2">Op. Balance</th>
                                            <th colspan="3" class="merge">Sales</th>
                                            <th rowspan="2">Recoveries</th>
                                            <th rowspan="2">Net Increase/Decrease</th>
                                            <th rowspan="2">Closing Balance</th>
                                        </tr>
                                        <tr>
                                            <th>Cheque</th>
                                            <th>Clean Credit</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Temp; i++)
                                        {
                                            <tr>
                                                <td>S@((i % 4) + 1)</td>
                                                <td>$625.50</td>
                                                <td>$809</td>
                                                <td>BD2409</td>
                                                <td>$36466.34</td>
                                                <td>$235342543.45</td>
                                                <td>$35353.34</td>
                                                <td>$353</td>
                                                <td>$8765676</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End: life time stats -->
        </div>
        <div class="col-md-6">
            <div class="portlet box blue-steel">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-thumb-tack"></i>Credit Outstanding Report
                    </div>
                    <div class="tools">
                        @*<a href="javascript:;" class="collapse"></a>
                            <a href="javascript:;" class="reload"></a>
                            <a href="javascript:;" class="remove"></a>*@
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="tab-content">
                        <div class="tab-pane active">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover table-bordered">
                                    <thead>
                                        <tr>
                                            <th rowspan="2">Distribution</th>
                                            <th rowspan="2">Credit Limit</th>
                                            <th rowspan="2">Clean Credit</th>
                                            <th colspan="4" class="merge">Cheques</th>
                                            <th rowspan="2">Total Outstanding</th>
                                            <th rowspan="2">Overdue</th>
                                        </tr>
                                        <tr>
                                            <th>In Hand</th>
                                            <th>Deposited</th>
                                            <th>Dishonored</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Temp; i++)
                                        {
                                            <tr>
                                                <td>S@((i % 4) + 1)</td>
                                                <td>$625.50</td>
                                                <td>$809</td>
                                                <td>BD2409</td>
                                                <td>$36466.34</td>
                                                <td>$235342543.45</td>
                                                <td>$35353.34</td>
                                                <td>$353</td>
                                                <td>$8765676</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End: life time stats -->
        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            <div class="portlet box blue-steel">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-thumb-tack"></i>Bounced Chaques
                    </div>
                    <div class="tools">
                        @*<a href="javascript:;" class="collapse"></a>
                            <a href="javascript:;" class="reload"></a>
                            <a href="javascript:;" class="remove"></a>*@
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="tab-content">
                        <div class="tab-pane active" id="overview_1">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Party<br />Code</th>
                                            <th>Party Name</th>
                                            <th>Cheque #</th>
                                            <th>Cheque Date</th>
                                            <th>Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Temp; i++)
                                        {
                                            <tr>
                                                <td>BD2409</td>
                                                <td>ABCSWE</td>
                                                <td>123ADF34</td>
                                                <td>@DateTime.Now.AddMonths(-i).ToString("dd-MMM-yy")</td>
                                                <td>$3533</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End: life time stats -->
        </div>
        <div class="col-md-7">
            <div class="portlet box blue-steel">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-thumb-tack"></i>Top Credit Parties
                    </div>
                    <div class="tools">
                        @*<a href="javascript:;" class="collapse"></a>
                            <a href="javascript:;" class="reload"></a>
                            <a href="javascript:;" class="remove"></a>*@
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="row">
                        <div class="col-md-3 pull-right">
                            @Html.DropDownListFor(m => m.DistributorId, new SelectList(Model.Distributors, "DistributorID", "DistributorCode"), "--Select--", new { @id = "distributorId", @class = "form-control input-small" })
                        </div>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane active">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover table-bordered">
                                    <thead>
                                    <tr>
                                        <th rowspan="2">Party Code</th>
                                        <th rowspan="2">Party Name</th>
                                        <th rowspan="2">Credit Limit</th>
                                        <th rowspan="2">Clean Credit</th>
                                        <th colspan="4" class="merge">Cheques</th>
                                        <th rowspan="2">Total Outstanding</th>
                                        <th rowspan="2">Overdue</th>
                                    </tr>
                                    <tr>
                                        <th>In Hand</th>
                                        <th>Deposited</th>
                                        <th>Dishonored</th>
                                        <th>Total</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @for (int i = 0; i < Model.Temp; i++)
                                    {
                                        <tr>
                                            <td>SG09673</td>
                                            <td>DEOVEN</td>
                                            <td>$809</td>
                                            <td>$7435</td>
                                            <td>$543</td>
                                            <td>$2353.45</td>
                                            <td>-</td>
                                            <td>$546215.45</td>
                                            <td>$8765676</td>
                                            <td>$235131</td>
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End: life time stats -->
        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            <div class="portlet box blue-steel">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-thumb-tack"></i>Credit Limit Exceeded
                    </div>
                    <div class="tools">
                        @*<a href="javascript:;" class="collapse"></a>
                            <a href="javascript:;" class="reload"></a>
                            <a href="javascript:;" class="remove"></a>*@
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="tab-content">
                        <div class="tab-pane active">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Party Code</th>
                                            <th>Party Name</th>
                                            <th>Credit Limit</th>
                                            <th>Outstanding Amount</th>
                                            <th>Amount Over Limit</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Temp; i++)
                                        {
                                            <tr>
                                                <td>BD2409</td>
                                                <td>ABCSWE</td>
                                                <td>$632563</td>
                                                <td>$9526676</td>
                                                <td>$3533</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-7">
            <div class="portlet box blue-steel">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-thumb-tack"></i>Overdue Credit
                    </div>
                    <div class="tools">
                        @*<a href="javascript:;" class="collapse"></a>
                            <a href="javascript:;" class="reload"></a>
                            <a href="javascript:;" class="remove"></a>*@
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="row">
                        <div class="col-md-3 pull-right">
                            @Html.DropDownListFor(m => m.DistributorId, new SelectList(Model.Distributors, "DistributorID", "DistributorCode"), "--Select--", new {@id = "distributorId", @class = "form-control input-small" })
                        </div>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane active">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover table-bordered">
                                    <thead>
                                    <tr>
                                        <th>Party Code</th>
                                        <th>Party Name</th>
                                        <th>Invoice Number</th>
                                        <th>Invoice Date</th>
                                        <th>Due Date</th>
                                        <th>Amount</th>
                                        <th>Days Overdur</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    @for (int i = 0; i < Model.Temp; i++)
                                    {
                                        <tr>
                                            <td>BD2409</td>
                                            <td>ABCSWE</td>
                                            <td>INV00@(i + 1)24@(i + 5)</td>
                                            <td>@DateTime.Now.AddMonths(-(i + 1)).ToString("dd-MMM-yy")</td>
                                            <td>@DateTime.Now.AddMonths(-i).ToString("dd-MMM-yy")</td>
                                            <td>$983034</td>
                                            <td>@(i + 10)</td>
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END PAGE CONTENT-->
</div>

@section scripts{
    <script src="~/Scripts/pages/ecommerce-index.js"></script>
    <script src="~/Scripts/datepicker/bootstrap-datepicker.js"></script>
    <script>
        jQuery(document).ready(function () {
            EcommerceIndex.init();
            $('.date-picker').datepicker({
                rtl: Metronic.isRTL(),
                orientation: "right",
                autoclose: true
            });
        });
    </script>
}